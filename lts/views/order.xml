<odoo>
	<data>
		    <record model="ir.ui.view" id="lts_list_order">
		      <field name="name">Order</field>
		      <field name="model">order.order</field>
		      <field name="arch" type="xml">
		        <tree>
		          <field name="order_number"/>
		          <field name="source_add"/>
		          <field name="desti_add"/>
		          <field name="KM"/>
		          <field name="duration"/>
		          <field name="vehicle_type"/>
		          <field name="vehicle_capacity"/>
		          <field name="vehicle_speed"/>
		        </tree>
		      </field>
		    </record>

		  <record model="ir.ui.view" id="lts_list_order_graph">
		      <field name="name">Order</field>
		      <field name="model">order.order</field>
		      <field name="arch" type="xml">
		        <graph>
		          <field name="vehicle_capacity"/>
		          <field name="vehicle_type" type="measure"/>
		        </graph>
		      </field>
		    </record>


			<record model="ir.actions.act_window" id="lts_action_window_order">
		      <field name="name">order</field>
		      <field name="res_model">order.order</field>
		      <field name="view_mode">tree,form,graph</field>
		    </record>
			<menuitem name="Order Data" id="lts_menu_1_order" parent = "lts_menu_root" action="lts_action_window_order"/>
	</data>
</odoo>