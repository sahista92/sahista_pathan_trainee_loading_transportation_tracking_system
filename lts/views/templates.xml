<odoo>
      <template id="agentdata">
          <t t-call="website.layout">
            <div class='container'>
                <a href='/lts/lts/createform/' class='btn btn-primary'> Create </a>
                <table class="table table-striped">
                      <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Contact_Number</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Action</th>
                      </tr>
                      <t t-foreach="agents" t-as="a">
                      <tr>
                        <td><t t-esc="a.name"/></td>
                        <td><t t-esc="a.email"/></td>
                        <td><t t-esc="a.c_number"/></td>
                        <td><t t-esc="a.gender"/></td>
                        <td><t t-esc="a.address"/></td>
                        <td><t t-esc="a.city"/></td>
                        <td><t t-esc="a.state"/></td>
                        <td>
                          <a t-attf-href='/lts/lts/delete/{{ slug(a)}}' class='btn btn-danger'>Delete</a>
                          <a t-attf-href='/lts/lts/editform/{{ slug(a)}}' class='btn btn-primary'>Edit</a>
                        </td>
                        </tr>
                  </t>
                </table>
              </div>
              </t>
        </template>


        <template id='createdata'>
          <t t-call='website.layout'>
            <form t-attf-action='/lts/lts/data/#{agent.id if agent else ""}' method='post'>
            <div class='container'>
              <div class='form-group'>
                  <label>Name</label>
                  <input type='text' name='name'  t-attf-value='#{agent.name if agent else ""}' class='form-control'/>
                </div>
                  <div class='form-group'>
                  <label>Email</label>
                  <input type='text' name='email' t-attf-value='#{agent.email if agent else ""}' class='form-control'/>
                </div>
                  <div class='form-group'>
                  <label>Contact Number</label>
                  <input type='number' name='c_number' t-attf-value='#{agent.c_number if agent else ""}' class='form-control'/>
                </div>
                  <div class='form-group'>
                  <label>Gender</label>
                  <input type='radio' name='gender' value='female'/>female
                  <input type='radio' name='gender' value='male'/>male
                </div>
                  <div class='form-group'>
                  <label>Address</label>
                  <input type='text' name='address' t-attf-value='#{agent.address if agent else ""}' class='form-control'/>
                </div>
                  <div class='form-group'>
                  <label>city</label>
                  <input type='text' name='city' t-attf-value='#{agent.city if agent else ""}' class='form-control'/>
                </div>
                  <div class='form-group'>
                  <label>state</label>
                  <select name='state' class='form-control'>
                    <option value='draft'>draft</option>
                    <option value='done'>done</option>
                    <option value='cancel'>cancel</option>
                  </select>
                </div>
                  <center><button name='save' type='submit' class='btn btn-success'>save</button></center>
          </div>
            </form>
          </t>
        </template>

