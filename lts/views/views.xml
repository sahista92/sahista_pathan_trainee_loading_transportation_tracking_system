    <record model="ir.ui.view" id="lts_list_agent_regi">
      <field name="name">Agent_form</field>
      <field name="model">agent_registration.agent_registration</field>
      <field name="arch" type="xml">
        <form string="description">
          <header>
            <button name="button_done" states="draft,cancel" string="Done" type="object"/>
            <button name="button_reset" states="done,cancel"  string="Reset to Draft" class="btn-success" type="object"/>
            <button name="button_cancel" states="done,draft" string="Cancel" type="object"/>

            <field name="state" widget="statusbar" statusbar_visible="draft,done,cancel"/>
          </header>
          <sheet>
          <group>
              <field name="name"/>
              <field name="email"/>
              <field name="c_number"/>
              <field name="gender"/>
              <field name="address"/>
              <field name="city"/>
          </group>
        </sheet>
        </form>
      </field>
    </record>

  <record model="ir.ui.view" id="lts_list_agent_regi_search">
      <field name="name">Agent_form</field>
      <field name="model">agent_registration.agent_registration</field>
      <field name="arch" type="xml">
            <search string="Gender Search">
                <field name="gender" widget="selection"/>
                <group string="Group By">
                  <filter name="group_by_Gender" string="Gender" context="{'group_by': 'gender'}"/>
                </group>
            </search>

      </field>
    </record>

    <record model="ir.actions.act_window" id="lts_action_window_agent_regi">
      <field name="name">Details</field>
      <field name="res_model">agent_registration.agent_registration</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>


    <menuitem name="Loading Transportation System" id="lts_menu_root"/>

    <menuitem name="Agent-Registration" id="lts_menu_1_agent_regi" parent="lts_menu_root" action="lts_action_window_agent_regi"/>

 
